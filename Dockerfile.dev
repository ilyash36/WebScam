# Dockerfile для разработки
FROM python:3.11-slim

# Устанавливаем переменные окружения
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Устанавливаем рабочую директорию
WORKDIR /app

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    postgresql-client \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Копируем requirements и устанавливаем зависимости
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Устанавливаем инструменты разработки (опционально)
COPY requirements-dev.txt .
RUN pip install -r requirements-dev.txt || true

# Устанавливаем netcat для проверки БД (в dev образе)
RUN apt-get update && apt-get install -y netcat-openbsd dos2unix && \
    rm -rf /var/lib/apt/lists/*

# Копируем скрипт входа
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN dos2unix /docker-entrypoint.sh && \
    chmod +x /docker-entrypoint.sh

# Копируем проект
COPY . .

# Создаем директории
RUN mkdir -p /app/staticfiles /app/media /app/logs

# Создаем пользователя
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app && \
    chown appuser:appuser /docker-entrypoint.sh

# Открываем порт
EXPOSE 8000

# Точка входа (выполняется от root, затем переключается на appuser)
ENTRYPOINT ["/docker-entrypoint.sh"]

# Переключаемся на пользователя перед запуском команды
USER appuser

# Команда по умолчанию (будет переопределена в docker-compose)
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
